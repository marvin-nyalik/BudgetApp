<div class="cat-cont mt-5">
  <div class="d-flex justify-content-between bg-primary text-light align-items-center withinc">
    <%= link_to categories_path do %>
      <i class="bx bxs-chevron-left display-4 text-white"></i>
    <% end %>
    <p>Add New Category</p>
    <%= link_to 'Sign out', let_user_logout_path, method: :delete , style:"color: white; font-weight: 400;"%>
  </div>

  <%= form_with model: @category, url: categories_path, html: { class: 'card' } do |f| %>
    <div class="card-body">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :icon %>
        <%= f.text_field :icon, autocomplete: "name", class: "form-control" %>
      </div>
    
      <div class="text-center mt-4">
        <%= f.submit "Add Category", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
